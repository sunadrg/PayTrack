<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <!-- Network Status Banner -->
    <LinearLayout
        android:id="@+id/networkStatusBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF9800"
        android:padding="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivNetworkStatus"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_wifi_off"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvNetworkStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Device offline, displaying cached data"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/ivCloseBanner"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_2sdp" />

    </LinearLayout>

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PayTrack"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your payment history"
            android:textSize="@dimen/_14ssp"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <!-- Content Section -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_16sdp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>